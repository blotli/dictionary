<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dictionary</title>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=2"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#fff" />
    <link
      rel="preload"
      href="./assets/fonts/Inter.var.woff2"
      as="font"
      type="font/woff2"
      crossorigin=""
    />
    <link
      rel="stylesheet"
      href="./css/vendor/highlightjs/stackoverflow-light.css"
    />
    <style>
      @font-face {
        font-family: Inter var;
        font-style: normal;
        font-weight: 100 900;
        font-display: swap;
        src: url("./assets/fonts/Inter.var.woff2") format("woff2");
        font-named-instance: Regular;
      }
      @font-face {
        font-family: Inter var;
        font-style: italic;
        font-weight: 100 900;
        font-display: swap;
        src: url("./assets/fonts/Inter-italic.var.woff2") format("woff2");
        font-named-instance: Italic;
      }

      html,
      body {
        background: #fff;
        font-family: Inter var, Lato, ui-sans-serif, system-ui, -apple-system,
          BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial,
          "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
          "Segoe UI Symbol", "Noto Color Emoji";
        font-size: 1rem;
        margin: 0;
        scrollbar-gutter: stable;
        touch-action: manipulation;
      }

      p {
        text-overflow: ellipsis;
        overflow-x: hidden;
      }

      h1 {
        margin: 40px 0;
      }

      h2 {
        border-bottom: 1px solid #000;
        padding-bottom: 16px;
      }

      hr {
        border-width: 1px 0 0;
        border-top: 1px solid #000;
      }

      a:link,
      a:visited {
        color: blue;
      }

      a:active {
        color: red;
      }

      .header {
        background: #fff;
        height: 56px;
        border-bottom: 1px solid #000;
        position: sticky;
        top: 0;
      }

      .header > div {
        margin: 0 auto;
        max-width: 1024px;
        padding: 0 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
      }

      .header input {
        border: 1px solid #000;
        font-size: 1rem;
        height: 32px;
        padding: 4px 8px;
        width: 280px;
      }

      .content {
        margin: 0 auto;
        max-width: 1024px;
        padding: 0 16px;
      }

      .primary > p:first-of-type {
        display: flex;
        justify-content: space-between;
      }

      .scroll-top-btn {
        background: #fff;
        border: 1px solid #000;
        color: blue;
        padding: 8px;
        position: fixed;
        top: 80px;
        left: 0;
        right: 0;
        max-width: 120px;
        margin: auto;
        opacity: 0;
        transform: translateY(-40px);
        transition: transform 300ms, opacity 300ms;
        cursor: pointer;
      }

      .scroll-top-btn--show {
        transform: translateY(0px);
        opacity: 1;
      }

      :target {
        animation-duration: 1000ms;
        animation-name: fade;
      }

      @keyframes fade {
        from {
          background: rgba(255, 0, 0, 0.25);
        }

        to {
          background: #fff;
        }
      }

      h2,
      h4,
      a {
        scroll-margin-top: 120px;
      }

      .highlight {
        background: rgba(255, 0, 0, 0.25);
        border-radius: 2px;
        padding: 2px;
      }

      @media (min-width: 768px) {
        .content {
          padding: 0 32px;
        }
      }
    </style>
    <script type="module">
      const main = document.querySelector(".primary");
      const cloned = main.cloneNode(true);
      const parseNode = document.createElement("div");
      const search = document.getElementById("search-field");

      search.oninput = () => {
        const searchValue = search.value;
        if (!searchValue) return (main.innerHTML = cloned.innerHTML);

        let innerHTML = "";
        let include = false;

        for (const $ of cloned.querySelectorAll(":scope > *")) {
          if ($.tagName === "H4") {
            if (
              $.innerText.toLowerCase().indexOf(searchValue.toLowerCase()) > -1
            ) {
              parseNode.innerHTML = $.outerHTML;
              parseNode.firstChild.innerHTML =
                parseNode.firstChild.innerHTML.replace(
                  new RegExp(`(${search.value})`, "gi"),
                  `<span class="highlight">$1</span>`
                );

              innerHTML += parseNode.innerHTML;
              include = true;
            } else {
              include = false;
            }
          } else if ($.tagName !== "H2" && include) {
            innerHTML += $.outerHTML;
          }
        }

        if (!innerHTML) innerHTML = "No results found...";

        main.innerHTML = innerHTML;
      };

      const topBtn = document.querySelector(".scroll-top-btn");
      topBtn.onclick = () =>
        document.scrollingElement.scrollTo({ top: 0, behavior: "smooth" });
      document.addEventListener(
        "scroll",
        (event) => (
          topBtn.classList[
            document.scrollingElement.scrollTop > 500 ? "add" : "remove"
          ]("scroll-top-btn--show"),
          {
            passive: true,
            capture: true,
          }
        )
      );

      document.onkeydown = (event) => {
        if (event.key === "/" && document.activeElement !== search) {
          event.preventDefault();
          search.focus();
        }
      };
    </script>
  </head>
  <body>
    <div>
      <header class="header">
        <div>
          <input
            id="search-field"
            autocomplete="off"
            autocorrect="off"
            autofocus
            placeholder='Search entries (Press "/" to focus)'
            spellcheck="false"
            type="search"
          />
          <a href="https://github.com/jake-knerr/jakes-dictionary">Github</a>
        </div>
      </header>

      <main class="content">
        <div><h1>Jake's Dictionary</h1></div>
        <div class="primary"><%- data %></div>
      </main>
      <button class="scroll-top-btn">Return to Top</button>
    </div>
  </body>
</html>
